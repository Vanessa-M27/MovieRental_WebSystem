@model IEnumerable<MovieRental_WebSystem.Models.HarryPotterCharacter>

@{
    ViewData["Title"] = "Harry Potter Characters";
}

<h2>Harry Potter Characters</h2>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>House</th>
            <th></th> 
        </tr>
    </thead>
    <tbody>
        @foreach (var character in Model)
        {
            <tr>
                <td>@character.Name</td>
                <td>@character.House</td>
                <td>
                    <a asp-action="Details" asp-route-id="@character.Id">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>

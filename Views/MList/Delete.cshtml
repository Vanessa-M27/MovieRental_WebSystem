@model MovieRental_WebSystem.Models.Movie

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Movie</h4>
    <hr />
    <dl class="row">
       
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
       
    </dl>
   
    <form asp-action="Delete" method="post" onsubmit="this.querySelector('button').disabled = true;">
        <div class="form-group">
            <label for="title">Movie Title</label>
            <input type="text" name="title" class="form-control" placeholder="Enter movie title" required />
        </div>
        <button type="submit" class="btn btn-danger">Delete Movie</button>
    </form>
